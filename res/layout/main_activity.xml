<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_gravity="top"
            android:background="@color/tab_divider_color"
            />

        <LinearLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/main_tab_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tab_label_top_padding"
                    android:paddingBottom="@dimen/tab_label_bottom_padding"
                    android:text="@string/tab_label_main"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp"
                    android:gravity="center"
                    />

                <View
                    android:id="@+id/main_tab_underline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_underline_height"
                    android:background="@color/tab_underline_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shopping_cart_tab"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/shopping_cart_tab_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tab_label_top_padding"
                    android:paddingBottom="@dimen/tab_label_bottom_padding"
                    android:text="@string/tab_label_shopping_cart"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp"
                    android:gravity="center"
                    />

                <View
                    android:id="@+id/shopping_cart_tab_underline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_underline_height"
                    android:background="@color/tab_underline_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_tab"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/mine_tab_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tab_label_top_padding"
                    android:paddingBottom="@dimen/tab_label_bottom_padding"
                    android:text="@string/tab_label_mine"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp"
                    android:gravity="center"
                    />

                <View
                    android:id="@+id/mine_tab_underline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_underline_height"
                    android:background="@color/tab_underline_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
